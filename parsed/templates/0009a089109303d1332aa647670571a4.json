{"components/category/sort-box":"<fieldset class=\"form-fieldset actionBar-section\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n        <select class=\"form-select form-select--small\" name=\"sort\" id=\"sort\">\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\n            {{#if result_count}}\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n            {{/if}}\n        </select>\n    </div>\n</fieldset>\n\n","components/f/category/show-all":"{{#if page_type '===' 'category'}}\n    <div class=\"productCount\">\n        {{#if category.count '<' category.total_products}}\n            {{lang 'category.showing_some' count=category.count total=category.total_products}}\n            <a href=\"{{category.url}}?limit=100\">\n            {{#if category.total_products '<=' '100'}}\n                {{lang 'category.show_all'}}\n            {{else}}\n                {{lang 'category.show_100'}}\n            {{/if}}\n            </a>\n        {{else}}\n            {{lang 'category.showing_all' quantity=category.total_products}}\n        {{/if}}\n    </div>\n{{/if}}\n","components/products/filter":"<!--<form class=\"actionBar\" method=\"get\" data-sort-by>\r\n    {{#unless theme_settings.hide_product_count_on_category}}\r\n        {{> components/f/category/show-all}}\r\n    {{/unless}}\r\n    {{> components/category/sort-box sort=sort}}\r\n</form>-->\r\n<form class=\"actionBar\" method=\"get\" data-sort-by>\r\n    {{#unless theme_settings.hide_product_count_on_category}}\r\n        {{> components/f/category/show-all}}\r\n    {{/unless}}\r\n    {{#if category.subcategories}}\r\n        <div style=\"clear: both; padding-top: 10px\">\r\n            <fieldset class=\"form-fieldset actionBar-section form-fieldset-cate\">\r\n                <div class=\"form-field\">\r\n                    <label class=\"form-label\" for=\"sort\">Shop By:</label>\r\n                    <select class=\"form-select form-select--small\"  id=\"cate_select\">\r\n                        <option>{{category.name}}</option>\r\n                       {{#each category.subcategories}}\r\n                        <option class=\"navList-item\" data-url=\"{{url}}\" value=\"{{name}}\">\r\n                            {{name}}\r\n                        </option>\r\n                        {{/each}}\r\n                    </select>\r\n                </div>\r\n            </fieldset>\r\n            {{> components/category/sort-box sort=sort}}\r\n        </div>\r\n    {{else}}\r\n     {{> components/category/sort-box sort=sort}}\r\n    {{/if}}\r\n</form>\r\n<style>\r\n     .form-fieldset-cate {\r\n         float: left;\r\n     }\r\n    .cate_select {\r\n        width: auto;\r\n        height: 26px;\r\n        line-height: 26px;\r\n        text-align: center;\r\n        text-align-last: center;\r\n        padding: 0px 5px;\r\n        color: #373737;\r\n        background-color: #fff;\r\n        border: 1px solid #ebebeb;\r\n    }\r\n    .cate_select option {\r\n        text-align: center;\r\n         text-align-last: center;\r\n    }\r\n    {{#if category.subcategories}}\r\n    .sidebarBlock {\r\n        visibility: hidden;\r\n    }\r\n    {{/if}}\r\n    @media(max-width: 768px){\r\n         .form-fieldset-cate {\r\n             float: none;\r\n         }\r\n        .cate_select {\r\n            width: 100%;\r\n            margin-bottom: 20px;\r\n        }\r\n        {{#if category.subcategories}}\r\n        .sidebarBlock {\r\n            display: none;\r\n        }\r\n        {{/if}}\r\n    }\r\n   \r\n</style>\r\n<script>\r\n    document.getElementById('cate_select').onchange = function(e){\r\n        var ev = e || window.event;\r\n        var option = $(this).find('option:selected');\r\n        var url = option.attr('data-url');\r\n        if(url){\r\n            window.location.href = url;\r\n            if(ev && ev.stopPropagation) {\r\n                //非IE浏览器\r\n                ev.stopPropagation();\r\n            } else {\r\n                //IE浏览器(IE11以下)\r\n                ev.cancelBubble = true;\r\n            }\r\n            return false;\r\n        }\r\n    }\r\n</script>\r\n"}
